// datasource
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider = "prisma-client-js"
}

// IMPORTANT: rename the Prisma enum in code, but map it to the existing DB enum "Mood"
enum AppMood {
  HAPPY
  SAD
  STRESSED
  CALM
  ENERGIZED
  TIRED

  @@map("Mood") // <-- DB enum already exists as "Mood"
}

// IMPORTANT: map the model to the already existing table (likely named "Mood")
model MoodEntry {
  id          Int       @id @default(autoincrement()) // if yours is UUID, change to String @id @default(uuid())
  lat         Float
  lng         Float
  mood        AppMood
  energy      Int
  text        String?   @db.Text
  deleteToken String?   @unique
  createdAt   DateTime  @default(now())

  @@index([createdAt])
  @@map("Mood") // <-- existing table name
}
