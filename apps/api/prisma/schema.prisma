generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MoodPulse {
  id        String   @id @default(cuid())
  mood      String   @db.VarChar(16) // "happy" | "sad" | ...
  energy    Int
  text      String?  @db.VarChar(150)
  lat       Float
  lng       Float
  createdAt DateTime @default(now())
  expiresAt DateTime @default(now())

  @@index([createdAt])
  @@map("mood_pulses")
}
