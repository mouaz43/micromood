// Prisma + Postgres
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mood {
  id          String   @id @default(cuid())
  mood        String   // "happy" | "sad" | "stressed" | "calm" | "energized" | "tired"
  energy      Int      // 1..5
  text        String?  @db.VarChar(160)
  lat         Float
  lng         Float
  createdAt   DateTime @default(now())
  deleteToken String   @unique
  unlockAt    DateTime? // optional: future release hook
}
