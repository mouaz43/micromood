generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mood {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  lat       Float
  lng       Float
  mood      String
  energy    Int
  city      String?
  country   String?

  // NEW: optional short thought (up to ~150 chars)
  message   String?
}
