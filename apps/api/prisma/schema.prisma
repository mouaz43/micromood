generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <-- correct env var name
}

model Mood {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  lat          Float
  lng          Float
  mood         String
  energy       Int
  city         String?
  country      String?
  message      String?

  // allows the original sender to delete anonymously
  deleteToken  String   @unique
}
