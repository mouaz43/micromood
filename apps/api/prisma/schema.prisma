generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Mood {
  HAPPY
  SAD
  STRESSED
  CALM
  ENERGIZED
  TIRED
}

model MoodPulse {
  id          String   @id @default(cuid())
  mood        Mood
  energy      Int
  text        String?  @db.VarChar(150)
  lat         Float
  lng         Float
  city        String?
  deleteToken String   @unique
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  @@index([createdAt])
  @@index([lat, lng])
}
