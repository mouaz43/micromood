generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // must exist in Render env
}

model Mood {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  lat          Float
  lng          Float
  mood         String
  energy       Int
  city         String?
  country      String?
  message      String?

  // TEMPORARY: make optional so we can add the column without failing
  deleteToken  String?  @unique
}
